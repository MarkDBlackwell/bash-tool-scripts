#!/bin/sh
# Author: Mark D. Blackwell
# Date written: October(?), 2010
# Date last changed: March 29, 2011

# Grep.
# Show line numbers of matching strings, excluding certain directories.
# (Global regular expression print.)
# Usage:
#   grep <regexp>

grep --exclude=*\.sqlite3 \
--exclude-dir=\.git \
--exclude-dir=db \
--exclude-dir=javascripts \
--exclude-dir=log \
--exclude-dir=migrate \
--exclude-dir=out \
--exclude-dir=vendor \
--ignore-case \
--recursive --line-number --max-count=1 --regexp=$1 . | head
# By hand:  grep -m 1 -inre <regexp> <directory>
